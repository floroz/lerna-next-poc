{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn install; lerna bootstrap;",
    "start": "lerna run start --parallel",
    "start:shop-web": "node -r ./dotenv.config.js node_modules/.bin/lerna run --scope shop-web --stream dev",
    "build:shop-web": "node -r ./dotenv.config.js node_modules/.bin/lerna run --scope shop-web --stream build",
    "run:build:shop-web": "lerna run start --scope shop-web"
  }
}
